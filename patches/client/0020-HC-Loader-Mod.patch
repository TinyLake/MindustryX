+        listen(l -> {
+            l.pause();
+            try{
+                l.dispose();
+            }catch(Throwable t){
+                t.printStackTrace();
+            }
+        });
+        dispose();
+
+        SDL_DestroyWindow(window);
+        SDL_Quit();
+    }
+
